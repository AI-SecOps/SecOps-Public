{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploys an Azure Sentinel watchlist with dummy CSV values (5Ã—5) using minimal parameters."
  },
  "parameters": {
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace."
      }
    },
    "watchlistName": {
      "type": "string",
      "defaultValue": "dummyWatchlist",
      "metadata": {
        "description": "Name (also used as alias/displayName) of the watchlist."
      }
    },
    "rawCsvLines": {
      "type": "array",
      "defaultValue": [
        "Col1,Col2,Col3,Col4,Col5",
        "row1c1,row1c2,row1c3,row1c4,row1c5",
        "row2c1,row2c2,row2c3,row2c4,row2c5",
        "row3c1,row3c2,row3c3,row3c4,row3c5",
        "row4c1,row4c2,row4c3,row4c4,row4c5",
        "row5c1,row5c2,row5c3,row5c4,row5c5"
      ],
      "metadata": {
        "description": "Array of CSV lines for the watchlist (first element is header)."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "displayName": "[parameters('watchlistName')]",
    "watchlistAlias": "[parameters('watchlistName')]",
    "description": "[concat('Watchlist ', parameters('watchlistName'), ' created via ARM template.')]",
    "rawCsv": "[join(parameters('rawCsvLines'), '\n')]",
    "watchlistContent": "[base64(variables('rawCsv'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/Microsoft.SecurityInsights/watchlists",
      "apiVersion": "2021-10-01-preview",
      "name": "[concat(parameters('workspaceName'), '/providers/Microsoft.SecurityInsights/watchlists/', parameters('watchlistName'))]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]"
      ],
      "properties": {
        "displayName": "[variables('displayName')]",
        "description": "[variables('description')]",
        "provider": "Azure Sentinel",
        "watchlistAlias": "[variables('watchlistAlias')]",
        "contentType": "text/csv",
        "rawContent": "[variables('watchlistContent')]",
        "infoUri": "",
        "publish": false,
        "labels": []
      }
    }
  ],
  "outputs": {
    "watchlistResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces/providers/Microsoft.SecurityInsights/watchlists', concat(parameters('workspaceName'), '/providers/Microsoft.SecurityInsights/watchlists/', parameters('watchlistName')))]"
    },
    "watchlistAlias": {
      "type": "string",
      "value": "[variables('watchlistAlias')]"
    }
  }
}
