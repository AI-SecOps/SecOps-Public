{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace name where Sentinel is enabled."
      }
    }
  },
  "variables": {
    "watchlistName": "MSSE_Trusted_IPs",
    "sourceFile": "trusted_ips.csv",
    "description": "List of trusted IPs for the organization",
    "itemsSearchKey": "IP_Address",
    "rawCsvLines": [
      "IP_Address,Subnet",
      "127.0.0.1,FALSE",
      "127.0.0.2,TRUE",
      "10.0.0.1,TRUE",
      "10.0.0.2,FALSE",
      "192.168.0.1,TRUE"
    ],
    "rawContent": "[concat(join(variables('rawCsvLines'), '\n'), '\n')]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/Microsoft.SecurityInsights/watchlists",
      "apiVersion": "2022-08-01",
      "name": "[concat(parameters('workspace'), '/Microsoft.SecurityInsights/', variables('watchlistName'))]",
      "properties": {
        "displayName": "[variables('watchlistName')]",
        "source": "[variables('sourceFile')]",
        "description": "[variables('description')]",
        "provider": "Custom",
        "isDeleted": false,
        "labels": [],
        "defaultDuration": "P1000Y",
        "contentType": "Text/Csv",
        "numberOfLinesToSkip": 0,
        "itemsSearchKey": "[variables('itemsSearchKey')]",
        "rawContent": "[variables('rawContent')]"
      },
      "dependsOn": []
    }
  ]
}
